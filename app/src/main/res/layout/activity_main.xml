<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


         <LinearLayout
             android:translationX="-280dp"
             android:id="@+id/mainMenu"
               android:layout_width="280dp"
               android:layout_height="match_parent"
               android:background="#1E2E61"
               android:orientation="vertical">

               <Button
                   android:id="@+id/userpicbig"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="20dp"
                   android:adjustViewBounds="true"
                   android:background="@drawable/sssss"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent" />

               <TextView
                   android:id="@+id/user"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:gravity="center"
                   android:text="Makhmudov"
                   android:textColor="#FBFBFB"
                   android:textSize="20sp"
                   android:textStyle="normal"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/imageView1" />

               <TextView
                   android:id="@+id/country"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:gravity="center"
                   android:text="Tashkent"
                   android:textColor="#FBFBFB"
                   android:textSize="16sp"
                   android:textStyle="normal"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/imageView1" />

               <Button
                   android:id="@+id/exp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="44dp"
                   android:layout_marginTop="30dp"
                   android:background="@drawable/bgbtnmenu"
                   android:gravity="left"
                   android:text="Explore"
                   android:textAllCaps="true"
                   android:textColor="#FFF"
                   android:textSize="16sp"
                   android:textStyle="normal" />

               <Button
                   android:id="@+id/add"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="44dp"
                   android:layout_marginTop="8dp"
                   android:background="@drawable/bgbtnmenu"
                   android:gravity="left"
                   android:text="AddOns"
                   android:textAllCaps="false"
                   android:textColor="#4B577B"
                   android:textSize="16sp"
                   android:textStyle="normal" />

               <Button
                   android:id="@+id/msg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="44dp"
                   android:layout_marginTop="8dp"
                   android:background="@drawable/bgbtnmenu"
                   android:gravity="left"
                   android:text="Message"
                   android:textAllCaps="false"
                   android:textColor="#4B577B"
                   android:textSize="16sp"
                   android:textStyle="normal" />

               <Button
                   android:id="@+id/st"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="44dp"
                   android:layout_marginTop="8dp"
                   android:background="@drawable/bgbtnmenu"
                   android:gravity="left"
                   android:text="Settings"
                   android:textAllCaps="false"
                   android:textColor="#4B577B"
                   android:textSize="16sp"
                   android:textStyle="normal" />

               <Button
                   android:id="@+id/sgo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="44dp"
                   android:layout_marginTop="58dp"
                   android:background="@drawable/bgbtnmenu"
                   android:gravity="left"
                   android:text="Sign Out"
                   android:textAllCaps="false"
                   android:textColor="#4B577B"
                   android:textSize="16sp"
                   android:textStyle="normal" />


           </LinearLayout>
    <RelativeLayout
        android:translationX="-280dp"
        android:id="@+id/maincontent"
        android:layout_width="416dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnmenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/sssss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/userhome"
            android:layout_width="182dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="118dp"
            android:layout_toEndOf="@+id/btnmenu"
            android:gravity="center"
            android:text="Makhmudov"
            android:textColor="#011042"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/countryhome"
            android:layout_width="182dp"
            android:layout_height="27dp"
            android:layout_below="@+id/userhome"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="119dp"
            android:layout_toEndOf="@+id/btnmenu"
            android:gravity="center"
            android:text="Tashkent"
            android:textColor="#011042"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/solving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exp2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="219dp"
            android:gravity="left"
            android:text="Solving your problems"
            android:textColor="#011042"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/exp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countryhome"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="254dp"
            android:gravity="left"
            android:text="Explore"
            android:textColor="#011042"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_marginRight="44dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/menu1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="248dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sssss"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="248dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sssss"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="248dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sssss"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>

